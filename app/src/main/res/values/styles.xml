<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="apparel">
        <item name="android:textSize">42sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/true_white</item>
        <item name="fontFamily">@font/bold</item>
    </style>

    <style name="apparel_small">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/bold</item>
    </style>

    <style name="a">
        <item name="android:textSize">38sp</item>
        <item name="android:textColor">@color/true_white</item>
        <item name="fontFamily">@font/bold</item>
    </style>

    <style name="login_to_apparel">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>
    <style name="forgot_password">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>
    <style name="login_btn">
        <item name="android:textColor">@color/true_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="dont_have_account">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="product_page_name">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="product_page_price">
        <item name="android:textColor">@color/price</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="product_page_rating">
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="detail_product_page_detail">
        <item name="android:textColor">@color/price</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="season_sale">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/true_white</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="up_to_25_off">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/sale_off_text</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="term">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/true_white</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="categories">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/bold</item>
    </style>


</resources>